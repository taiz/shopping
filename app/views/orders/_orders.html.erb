<table>
  <tr>
    <th><%= sortable("Name", "index", "name", @order, true) %></th>
    <th><%= sortable("Address", "index", "address", @order, true) %></th>
    <th><%= sortable("Email", "index", "email", @order, true) %></th>
    <th><%= sortable("Pay type", "index", "pay_type", @order, true) %></th>
    <th><%= sortable("Shipped", "index", "ship_date", @order, true) %></th>
    <th><%= sortable("Created At", "index", "created_at", @order, true) %></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= order.ship_date %></td>
    <td><%= order.created_at %></td>
    <td><%= button_to '発送', order_ship_path(order) %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= will_paginate @orders, sort_by: @sort_by, order: @order %></p>
