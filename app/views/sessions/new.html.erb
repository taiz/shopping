<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>ログインしてください</legend>
      
      <div class="field">
        <%= label_tag :name, '名前：' %>
        <%= text_field_tag :name, params[:name], size: 40  %>
      </div>
      <div class="field">
        <%= label_tag :password, 'パスワード：' %>
        <%= password_field_tag :password, params[:password], size: 40  %>
      </div>
      <div class="actions">
        <%= submit_tag 'ログイン' %>
      </div>
    </fieldset>
  <% end %>
</div>
